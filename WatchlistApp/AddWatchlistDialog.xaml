<Window x:Class="WatchlistApp.AddWatchlistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WatchlistApp"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="AddWatchlistDialog" Height="50" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Watchlist Name" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="new_watchlist_field" Grid.Column="1"/>
        <Button Content="Hinzufügen" Grid.Column="2" Click="AddWatchlistToDatabase" />
    </Grid>
</Window>
